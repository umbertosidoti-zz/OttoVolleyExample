<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle">
		    <solid android:color="@color/list_row_end_color"/>
		   <corners android:radius="2dp" />
		</shape>
	</item>
	<item
      android:left="0dp"
      android:right="0dp"
      android:top="0dp"
      android:bottom="2dp">
      <shape android:shape="rectangle">
          <gradient
               android:endColor="@color/StartColor_button"
               android:startColor="@color/EndColor_button"
               android:angle="270" />
         <corners android:radius="2dp" />
      </shape>
   </item>
</layer-list>